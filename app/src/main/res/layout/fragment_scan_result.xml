<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.forvm.gadfly.projectgadfly.ScanResult">

        <TextView
            android:id="@+id/scanResultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/scanResultTitle"
            android:layout_above="@id/scanResultTags">

            <TextView
                android:id="@+id/scanResultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </ScrollView>

        <TextView
            android:id="@+id/scanResultTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>
