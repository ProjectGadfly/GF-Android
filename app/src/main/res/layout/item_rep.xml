        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/phone"
            android:padding="3dp"
            android:layout_toEndOf="@+id/photo_url"
            android:layout_toRightOf="@+id/photo_url"/>
